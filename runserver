#!/bin/bash -e

if go version; then
    export GOPATH="`pwd`/../../"
    export GOBIN="`pwd`/bin"
    echo "Compiling server..."
	mkdir -p "$GOBIN"
    go get buildblast/server

    cd client
    echo "Starting server..."
    ../bin/server

    exit 0
else
    echo "ERROR: Go must be installed to compile the server."
    echo "Get it from http://www.golang.org"
    exit 1
fi
